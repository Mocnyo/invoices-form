                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">lp.</th>
                                <th scope="col">Nazwa towaru/usługi</th>
                                <th scope="col">Ilość</th>
                                <th scope="col">Jm</th>
                                <th scope="col">Cena netto</th>
                                <th scope="col">VAT</th>
                                <th scope="col">Kwota brutto</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th scope="row">1.</th>
                                <td><input type="text"></td>
