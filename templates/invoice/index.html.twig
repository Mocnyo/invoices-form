                                <td><input type="text"></td>
                                <td></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-3">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Płatność</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-1">
                                <label>Status</label>
                                <input type="test" class="form-control form-control"
                                       placeholder="Zapłacono">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-1">
                                <label>Sposób płatności</label>
                                <input type="test" class="form-control form-control"
                                       placeholder="Przelew">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-3">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mt-4">Wygeneruj</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-1">
                                <div class="text-center">
                                    <a href="#" class="btn btn-primary btn-user btn-block m-auto">
                                        Generate
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}